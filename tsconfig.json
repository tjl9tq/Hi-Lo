    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "pretty": true,
    "skipLibCheck": true,
    "jsx": "react",
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types", "@types"
    ],
    "baseUrl": ".",
  },
  "include": [
    "./src/"
  ]
}